<% layout('layouts/boilerplate') -%>

<h1>Places Overview</h1>
    <div class="row row-cols-1 row-cols-md-3 mb-3">
        <% for (let place of places) { %> 
            <div class="col">
            <div class="card h-100">
                <img src="<%= place.images[0].url %>" class="card-img-top" style="height:15vw; object-fit:cover;" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= place.title %></h5>
                    <p class="card-text"><%= place.category %></p>
                    <p class="card-text"><%= place.ages %></p>
                    <a href="places/<%= place._id %>">For detail</a>
                </div>
            </div>
            </div>
        <% } %> 
    </div>
