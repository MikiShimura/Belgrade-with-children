<% layout('layouts/boilerplate') -%>
<link rel="stylesheet" type="text/css" href="/stylesheets/starability-basic.css"/>

<div class="row">
  <div class="col-6">
      <div class="card mb-3">
          <div class="card-body">
              <% if (place.image) { %> 
              <img src="<%= place.image %>" class="d-block w-100" alt="...">
              <% } %> 
              <h5 class="card-title"><%= place.title %></h5>
              <p class="card-text"><%= place.description %></p>
          </div>
          <ul class="list-group list-group-flush"> 
              <li class="list-group-item"><%= place.category %></li>
              <li class="list-group-item">Ages 
                  <% for (let age of place.ages) { %>
                      <%= age %>
                  <% } %> 
              </li>
              <li class="list-group-item text-muted"><%= place.location %></li>
              <li class="list-group-item text-muted"><%= place.price %>RSD</li>
          </ul>
          <% if(currentUser && place.author._id.equals(currentUser._id)) { %>
            <div class="card-body">
                <a href="/places/<%= place._id %>/edit" class="card-link btn btn-info">Edit</a>
                <form class="d-inline" action="/places/<%= place._id %>?_method=DELETE"  method="post">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
          <% } %> 
      </div>
  </div>

  <div class="col-6">
    <% if(currentUser) { %>
      <h2>Add review</h2>
      <form action="/places/<%= place._id %>/reviews" method="post" class="mb-3 needs-validation" novalidate>
        <div>
          <fieldset class="starability-basic">
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="1">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="2">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" checked/>
            <label for="first-rate3" title="3">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="4">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="5">5 stars</label>
          </fieldset>
        </div>
        
        <div class="mb-3">
          <label class="form-label" for="body">Comment</label>
          <textarea class="form-control" name="review[body] "id="body" cols="30" rows="3" required></textarea>
          <div class="invalid-feedback">
            Please fill this field.
          </div>
        </div>
        <button class="btn btn-success">Post review</button>
      </form>
      <% } %> 

      <% if (place.reviews.length) { %> 
      <h2>Reviews</h2>
      <% } else { %>
      <h2>No reviews</h2>
      <% } %> 
      <% for (let review of place.reviews) { %> 
        <div class="card mb-3">
          <div class="card-body">
            <p class="starability-result" data-rating="<%= review.rating %>">
              Rated: <%= review.rating %> stars
            </p>
            <p class="card-text">Comment: <%= review.body %></p>
            <p class="card-text">By: <%= review.author.username %></p>
            <% if(currentUser && review.author.equals(currentUser._id)) { %>
            <form action="/places/<%= place._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
            <% } %> 
          </div>
        </div>
      <% } %>

  </div>
  
</div>