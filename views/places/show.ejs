<% layout('layouts/boilerplate') -%>
<link rel="stylesheet" type="text/css" href="/stylesheets/starability-basic.css"/>

<div class="container mb-3">
	<div class="row">
    <h2><%= place.title %></h5>
    <p><%= place.location %></p>
		<div class="col-md-8">
      <div id="placeCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% place.images.forEach((img, i) => {%> 
          <div class="carousel-item <%= i === 0 ? "active" : "" %>" > <!--取得したインデックスが0なら…-->
            <img src="<%= img.url %>" class="d-block w-100" alt="...">
          </div>
          <% }) %>
        </div>
        <% if(place.images.length > 1) { %> 
        <button class="carousel-control-prev" type="button" data-bs-target="#placeCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#placeCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
        <% } %>
      </div>
    </div>
    <div class="col-md-4">
      <ul class="list-group list-group-flush"> 
        <li class="list-group-item"><%= place.category %></li>
        <li class="list-group-item">Ages 
            <% for (let age of place.ages) { %>
                <%= age %>
            <% } %> 
        </li>
        <li class="list-group-item text-muted"><%= place.location %></li>
        <li class="list-group-item text-muted"><%= place.price %>RSD</li>
      </ul>
      <div>
        <div id='map' style='width: 400px; height: 300px;'></div>
      </div>
    </div>
    <p><%= place.description %></p>
  </div>
  <% if(currentUser && place.author._id.equals(currentUser._id)) { %>
    <div class="mb-3">
        <a href="/places/<%= place._id %>/edit" class="btn btn-info">Edit</a>
        <form class="d-inline" action="/places/<%= place._id %>?_method=DELETE"  method="post">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
  <% } %>
</div>

<div class="container mb-3">
  <div class="row">
    <div class="col">
    <% if (place.reviews.length) { %> 
      <h3>Reviews</h2>
    <% } else { %>
      <h3>No reviews</h2>
    <% } %>
    </div>
    
  <div class="col">
    <div class="text-end">
      <!--modal button-->
      <% if (currentUser) { %> 
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#reviewModal">
          Post your review
        </button>
      <% } %>
      <!--modal body-->
        <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="reviewModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/places/<%= place._id %>/reviews" method="post" class="mb-3 needs-validation" novalidate>
                  <div>
                    <fieldset class="starability-basic">
                      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                      <label for="first-rate1" title="1">1 star</label>
                      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                      <label for="first-rate2" title="2">2 stars</label>
                      <input type="radio" id="first-rate3" name="review[rating]" value="3" checked/>
                      <label for="first-rate3" title="3">3 stars</label>
                      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                      <label for="first-rate4" title="4">4 stars</label>
                      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                      <label for="first-rate5" title="5">5 stars</label>
                    </fieldset>
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="body">Comment</label>
                    <textarea class="form-control" name="review[body] "id="body" cols="30" rows="3" required></textarea>
                    <div class="invalid-feedback">
                      Please fill this field.
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button class="btn btn-success">Post review</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mb-3">
  <% for (let review of place.reviews) { %>
    <div class="card mb-1">
      <div class="card-body">
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %> stars
        </p>
        <p class="card-text">Comment: <%= review.body %></p>
        <p class="card-text">By: <%= review.author.username %></p>
        <% if(currentUser && review.author.equals(currentUser._id)) { %>
        <form action="/places/<%= place._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %> 
      </div>
    </div>
    <% } %>
</div>    
    
<script>
  const mapToken = "<%= process.env.MAPBOX_TOKEN %>"
  const place = <%- JSON.stringify(place) %>
</script>
<script src="/javascripts/showPageMap.js"></script>