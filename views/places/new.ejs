<% layout('layouts/boilerplate') -%>

<div class="row">
    <h1 class="text-center">New place</h1>
    <div class="offset-md-3 col-md-6">
        <form action="/places" method="post" novalidate class="variated-form" enctype="application/x-www-form-urlencoded">
            <div class="mb-3">   
                <label class="form-label" for="title">Title</label>
                <input class="form-control" id="title" type="title" placeholder="Title" name="place[title]" required>
                <div class="invalid-feedback">
                    Plese fill out the field.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" id="description" type="description" placeholder="Description" name="place[description]" required></textarea>
                <div class="invalid-feedback">
                    Plese fill out the field.
                </div>
            </div>
            <div class="mb-3">
                <p class="for-label">Categories</p>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="category1" value="Culture" name="place[categories]">
                    <label class="form-check-label" for="category1">Culture</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="category2" value="Sport"  name="place[categories]">
                    <label class="form-check-label" for="category2">Sport</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="category3" value="Nature"  name="place[categories]">
                    <label class="form-check-label" for="category3">Nature</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="category4" value="Education"  name="place[categories]">
                    <label class="form-check-label" for="category4">Education</label>
                </div>
            </div>
            <div class="mb-3">
                <p class="for-label">Ages</p>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="Ages1" value="0~2" name="place[ages]">
                    <label class="form-check-label" for="Ages1">0~2 years old</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="Ages2" value="3~6" name="place[ages]">
                    <label class="form-check-label" for="Ages2">3~6 years old</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="Ages3" value="7~10" name="place[ages]">
                    <label class="form-check-label" for="Ages3">7~10 years old</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="Ages4" value="10~" name="place[ages]">
                    <label class="form-check-label" for="Ages4">10~ years old</label>
                </div>
            </div>
